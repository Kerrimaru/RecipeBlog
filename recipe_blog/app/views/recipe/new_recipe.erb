<h2>Add Your Recipe</h2>

<% if @message %>
<p><%= @message %></p><br>
<% end  %>

<% form_for @new_recipe, '/recipe/add' do |f| %>
  <%= f.label :name, :caption => "Title:" %>
  <%= f.text_field :name %>
  <%= f.label :method, :caption => "Method:" %>
  <%= f.text_area :method %>
  <%= f.submit "Submit", :class => 'button' %>
<% end %>
